{
  "name": "turborepo-basic-shared",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "turbo run test",
    "build": "turbo run build --concurrency=100%",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "pre-commit": "npm run lint && npm test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest",
    "husky": "^7.0.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.3.1"
}
